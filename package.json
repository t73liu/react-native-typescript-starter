{
  "name": "boilerplate",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "@types/expo": "^27.0.1",
    "@types/jest": "^22.2.3",
    "@types/react": "^16.3.17",
    "@types/react-native": "0.55.19",
    "@types/react-navigation": "^2.0.5",
    "@types/react-redux": "^6.0.2",
    "@types/react-test-renderer": "^16.0.1",
    "jest-expo": "^28.0.0",
    "npm-run-all": "^4.1.3",
    "prettier": "1.13.5",
    "react-native-scripts-ts": "1.14.0",
    "react-native-typescript-transformer": "^1.2.3",
    "react-test-renderer": "16.3.1",
    "ts-jest": "^22.4.6",
    "tslib": "^1.9.2",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-react": "^3.6.0",
    "typescript": "~2.8.4"
  },
  "main": "./node_modules/react-native-scripts-ts/build/bin/crna-entry.js",
  "scripts": {
    "start": "react-native-scripts-ts start",
    "eject": "react-native-scripts-ts eject",
    "android": "react-native-scripts-ts android",
    "ios": "react-native-scripts-ts ios",
    "test": "jest",
    "format": "npm-run-all format:*",
    "format:json": "prettier --write {.,**}/*.json",
    "format:md": "prettier --write {.,**}/*.md",
    "format:ts": "prettier --write {.,**}/*.{ts,tsx} && tslint --fix -p ."
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "preset": "jest-expo",
    "testMatch": [
      "**/__tests__/**/*.[tj]s?(x)",
      "**/?(*.)(spec|test).[tj]s?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "dependencies": {
    "@expo/vector-icons": "^6.3.1",
    "cuid": "^2.1.1",
    "expo": "^28.0.0",
    "native-base": "^2.5.1",
    "react": "~16.3.2",
    "react-native": "~0.55.4",
    "react-navigation": "^2.3.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-observable": "^1.0.0-beta.1",
    "redux-persist": "^5.10.0",
    "rxjs": "^6.2.1",
    "typesafe-actions": "^2.0.4"
  },
  "resolutions": {
    "@types/react-native": "0.55.19",
    "@types/react": "16.3.17",
    "react": "16.3.2",
    "redux": "4.0.0"
  }
}
